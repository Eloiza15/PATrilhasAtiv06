using System;

namespace Exercicios
{
    class Program
    {
        public static void Main()
        {
//        	Desenvolva um programa que solicite ao usuário para inserir um número
//inteiro positivo e, em seguida, exiba todos os números pares entre 0 e o
//número inserido.

            Console.WriteLine("Digite um número inteiro positivo para exibirmos os números pares de 0 ate ele:");
            int num = int.Parse(Console.ReadLine());
        	
        	Console.WriteLine("Números pares de 0 até :" + num);
        	
        	for (int i = 0; i <= num; i+=2){
        		Console.WriteLine(i);
        	}

            Console.WriteLine("");
            Console.WriteLine("Pressione qualquer tecla para fechar.");
            Console.ReadKey();
        }
    }
}
