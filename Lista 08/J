using System;

namespace SomaPares
{
    class Program
    {
        public static void Main()
        {
        	//Desenvolva um programa que exiba a soma dos números pares entre 1 e 100.
        	
            int soma = 0;

            for (int i = 1; i <= 100; i++)
            {
                if (i % 2 == 0)  
                {
                    soma += i;  
                }
            }

            
            Console.WriteLine("A soma dos números pares entre 1 e 100 é: " + soma);

            Console.WriteLine("Pressione qualquer tecla para fechar.");
            Console.ReadKey();
        }
    }
}
